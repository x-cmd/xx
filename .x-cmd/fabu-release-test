
# zig and release

x log init fabu

# Maybe just using docker to install and test ...
# Or provide a test cover more system...

(
git clone git@github.com:x-cmd/release tgt
cd tgt/dist

for i in *; do
    i=${i#.tgz}
    i=${i$.tar.xz}

    (
        eval "$(curl "https://get.x-cmd.com/${i}")"
        x scotty test || {
            fabu:error "Test failed for ${i}"
            exit 1
        }

        x rmrf ~/.x-cmd-root
    )

done

)
