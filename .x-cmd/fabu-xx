x log init yy

GIT_DOMAIN=${GIT_DOMAIN:-$(x websrc gitdomain)}

function work(){
    local num=$1

    yy:info "正在准备发布 x$num"
    (
        git clone "git@${GIT_DOMAIN}:x-cmd/y$num"
        cd "y$num" || exit
        x yanfa yy xx
    )
}

[ -z "$VERSION_NUM" ] || set -- "$VERSION_NUM"

if [ $# -eq 0 ]; then
    set -- 0 1 6
fi

for i in "$@"; do
    work "$i" || exit 1
done
