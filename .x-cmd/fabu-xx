x log init yy

GIT_DOMAIN=${GIT_DOMAIN:-$(x websrc gitdomain)}

function work(){
    local num=$1

    yy:info "正在准备发布 x$num"
    (
        git clone "git@${GIT_DOMAIN}:x-cmd/y$num"
        cd y$num
        x rmrf version_sum mod.index.txt yy.info.txt xx.info.txt
        x yanfa yy xx
    )
}

if [ $# -eq 0 ]; then
    set -- 0 1 6 7
fi

for i in "$@"; do
    work "$i" || exit 1
done
