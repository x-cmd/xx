
# zig and release

GIT_DOMAIN=${GIT_DOMAIN:-$(x websrc gitdomain)}

function test_yy(){
    local num=$1
    x:info "正在准备测试 y$num"
    (
        git clone "git@${GIT_DOMAIN}:x-cmd/y$num" || exit
        cd "y$num" || exit
        x yanfa yy test
    )
}

function main(){

    local i; for i in "$@"; do
        test_yy "$i" || exit 1
    done
}

if [ -n "$test_yy_num" ]; then
    set -- "$test_yy_num"
elif [ $# -eq 0 ]; then
    set -- 7 6
fi

main "$@"